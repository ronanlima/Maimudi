<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="16dp"
    android:gravity="bottom">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/ligh_gray"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="1dp"
        android:alpha="0.8">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/esqueci_senha_tela_principal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Hey muder! Você irá receber um email com uma senha temporária."
                android:textSize="14dp"
                android:gravity="left"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:padding="5dp"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Senha temporária"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ,./?;:|!@#$%*()-_=+[]{}'0123456789\\"
                android:inputType="textPassword"
                android:layout_margin="10dp"
                android:id="@+id/old_senha_recuperacao_senha"/>


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Nova senha"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ,./?;:|!@#$%*()-_=+[]{}'0123456789\\"
                android:inputType="textPassword"
                android:layout_margin="10dp"
                android:id="@+id/nova_senha_recuperacao_senha"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Redefinir senha"
                android:layout_gravity="bottom"
                android:textSize="14dp"
                android:id="@+id/btn_redefinir_senha"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:alpha="0.8"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
